@{
    ViewData["Title"] = "Home Page";
}

@model DefaultListViewModel

<div class="text-center">
    <h1 class="display-4">The BookStore</h1>
    <p>
        Some of Prof. Hilton’s favorite books he’s read or listened
        to in the past few years
    </p>
</div>


@foreach (Book b in Model.Books)
{
    <partial name="DefaultPartialView" model="b" />

}

<div page-model="@Model.PaginationInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>